{
  "extends": "expo/tsconfig.base",
  "typeRoots": ["./src/@types/env.d.tsx"],
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@screens/*": ["src/screens/*"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@ui/*": ["src/ui/*"],
      "@store/*": ["src/store/*"],
      "@api/*": ["src/api/*"]
    }
  }
}
